
@{
    ViewBag.Title = "Index";
}

<fieldset>
    <legend>Gộp đơn hàng tối ưu</legend>
    @using (Html.BeginForm("LumpExhibition", "LumpExhibition"))
    {
        <div class="form-group">
            <label class="col-lg-3">Chọn số người giao hàng</label>
            <div class="col-lg-9">
                @Html.TextBox("numberShipper", new { @type = "number", @step = "1", @value = "1" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-3">Chọn ngày giao hàng</label>
            <div class="col-lg-9">
                @Html.TextBox("dateSender", new { @id = "datesender" })
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Gộp đơn hàng</button>
        </div>
    }

</fieldset>

@section scripts{
    <script src="~/Content/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/lumpExhibition.js"></script>
}

