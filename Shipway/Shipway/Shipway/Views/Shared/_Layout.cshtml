@{
    Layout = null;
    var currentUser = (ShipwayBusiness.Entities.User)HttpContext.Current.Session["CurrentUser"];
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>
        @ViewBag.Title
    </title>
    <link href="~/Content/bs3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/customstyle.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/data-tables/DT_bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-slider-master/css/bootstrap-slider.min.css" rel="stylesheet" />
    <link href="~/Content/progress-tracker.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <style type="text/css">
        ul .notification {
            width: 500px;
        }

        #dynamic-table_info {
            float: left;
            margin: 0;
            padding: 0;
            margin-top: 10px;
        }

        #dynamic-table_length {
            margin: 0;
            padding: 0;
            float: right;
            margin-top: 10px;
        }

        .dataTables_paginate {
            float: right;
        }

        .toolbar {
            width: auto;
            float: left;
        }

        #dynamic-table_filter, #table_div_id.dataTables_filter {
            margin: 0;
            padding: 0;
            width: 300px;
        }

        .fc-event-time {
            display: none;
        }

        .datepicker {
            z-index: 10000 !important;
        }

        .tooltip {
            width: 200px;
        }

        .popover {
            width: 100%;
        }

        .error {
            color: #b94a48;
            border-color: #b94a48;
        }
    </style>
</head>
<body>
    <section id="container">
        <!--header start-->
        <header class="header fixed-top clearfix">
            <!--logo start-->
            <div class="brand">

                <a href="~/Dashboard" class="logo">
                    <h2 class="form-signin-heading">
                        Shipway
                    </h2>
                </a>
                <div class="sidebar-toggle-box">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </div>
            </div>
            <!--logo end-->
            <div class="top-nav clearfix">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <li><a href="@Url.Action("Index", "PersonalAccount")" id="logout"><i class="fa fa-suitcase"></i>  @currentUser.UserName</a></li>
                    <li><a href="@Url.Action("Logout", "Login")" id="logout"><i class="fa fa-key"></i> Log Out</a></li>
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--Sidebar Start-->
        @Html.Partial("_leftNav")

        <section id="main-content">
            <section class="wrapper">
                @RenderBody()
            </section>
        </section>

    </section>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/bs3/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Content/data-tables/jquery.dataTables.js"></script>
    <script src="~/Content/data-tables/DT_bootstrap.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>