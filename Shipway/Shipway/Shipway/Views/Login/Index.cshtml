@model ShipwayBusiness.Entities.User
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/customstyle.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <body class="login-body">
        <div class="container">

            <div class="form-signin">
                <h2 class="form-signin-heading">Quản lý vận chuyển hàng hóa</h2>
                <div class="login-wrap">

                    @using (Html.BeginForm("Login", "Login"))
                    {
                        <div class="user-login-info">

                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @required = "required", @placeholder = "UserName", @type = "text", @id = "txtUserName" })

                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @required = "required", @placeholder = "Password", @type = "password" })
                        </div>
                        if (TempData["Success"] != null)
                        {
                            <p class="valid" style="color:#58c9a0 ;font-weight:bold;font-size:small;">@TempData["Success"]</p>
                        }
                        <div class="form-group">
                            <div class="row icheck">
                                <div class="square-green single-row">
                                    <div class="checkbox">
                                        @*@Html.CheckBoxFor(model => model.account.IsRemember)
                                            @Html.Label("Remember me")*@
                                    </div>
                                    <span class="pull-right" style="padding-top:10px; margin-right:18px;">
                                        <a data-toggle="modal" href="#myModal"> Quên mật khẩu?</a>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-lg btn-login btn-block" type="submit">Đăng nhập</button>
                        if (ViewBag.Invalid == true)
                        {
                            <p id="invalid" style="color:red;font-weight:bold;font-size:small;">@TempData["ErrorMessage"]</p>
                        }

                    }
                    <div class="registration">
                        Bạn chưa có tài khoản?
                        <a class="" href="@Url.Action("Index", "SignUp")">
                            Tạo tài khoản mới
                        </a>
                    </div>
                </div>

                <!-- Modal -->
                <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            @using (Html.BeginForm("ResetPassword", "FrontEnd"))
                            {
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title">Quên mật khẩu ?</h4>
                                </div>
                                <div class="modal-body">
                                    <p>Nhập email của bạn.</p>
                                    @*@*<input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">*@
                                    @*@Html.TextBoxFor(model => model.account.EmailAddress, new { @class = "form-control placeholder-no-fix", @required = "required", @placeholder = "Email Address", @type = "Email" })*@
                                </div>
                                <div class="modal-footer">
                                    <button data-dismiss="modal" class="btn btn-default" type="button">Hủy</button>
                                    <button class="btn btn-success" type="submit">Gửi</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!-- modal -->
            </div>
        </div>

        <!-- Placed js at the end of the document so the pages load faster -->
        <!--Core js-->

        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>

        <script>
            $("#txtEmail").focus();
        </script>
    </body>
</body>
</html>


